#!/usr/bin/env bash

# Script: show_bash_pid.sh
# Description: Displays lines containing the word "bash" and extracts the PID of the Bash process.

# shellcheck disable=SC2009

# Search for lines containing the word "bash" using the 'ps' command and filter out the script's own process
ps_output=$(ps axo user,pid,command | grep bash | grep -v "$0")

# Process each line of the 'ps' output
while IFS= read -r line; do
  # Extract the PID from the line
  pid=$(echo "$line" | awk '{print $2}')
  # Print the line
  echo "$line"
done <<< "$ps_output"
