#!/usr/bin/env bash
# Script: manage_my_process

MANAGE_PROCESS_PATH="/path/to/manage_my_process"
PID_FILE="/var/run/my_process.pid"

start_process() {
  if [[ -e "$PID_FILE" ]]; then
    echo "manage_my_process is already running."
    exit 1
  fi

  $MANAGE_PROCESS_PATH > /tmp/my_process &
  echo "$!" > "$PID_FILE"
  echo "manage_my_process started"
}

stop_process() {
  if [[ -e "$PID_FILE" ]]; then
    pid=$(cat "$PID_FILE")
    kill "$pid"
    rm "$PID_FILE"
    echo "manage_my_process stopped"
  else
    echo "manage_my_process is not running."
    exit 1
  fi
}

case "$1" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    stop_process
    start_process
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
